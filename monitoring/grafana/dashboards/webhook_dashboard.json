{
  "dashboard": {
    "title": "BridgeCore Webhook Monitoring",
    "tags": ["bridgecore", "webhooks", "odoo"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Webhook Events per Second",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(webhook_received_total[5m])",
            "legendFormat": "{{model}} - {{operation}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Webhook Processing Time (p95)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(webhook_processing_seconds_bucket[5m])) by (le, model))",
            "legendFormat": "{{model}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(webhook_processing_seconds_bucket[5m])) by (le, model))",
            "legendFormat": "{{model}} - p50",
            "refId": "B"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "websocket_connections_active",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "title": "Webhook Queue Size",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "webhook_queue_size",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 5,
        "title": "Webhook Error Rate",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(webhook_errors_total[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Events by Model (Top 10)",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, sum by (model) (webhook_received_total))",
            "legendFormat": "{{model}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Sync Requests per Minute",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(sync_pull_requests_total[5m]) * 60",
            "legendFormat": "Sync Pulls",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
